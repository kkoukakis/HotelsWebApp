@{
    ViewData["Title"] = "HotelsWebApp";
    ViewData["Background"] = "login";
    ViewData["Page"] = "Login";
}
<main>

<!-- MAIN CONTENT -->

<div class="container login-kouk m10">
  <div class="section">
    <div class="row">
      <div class="col m3 hide-on-small-and-down"></div>
    
      <div class="col s12 m6 ">
        <form name="login-form" method="POST" asp-action="LoggedIn" asp-controller="Home"    onsubmit="return validateForm()">
          <label for="username">Username:</label><br>
          <div class="input-field">
           <i class="material-icons prefix ">account_circle</i>
           <input class="input-kouk" type="text" id="username" name="username" value="" placeholder="Type your username" required><br>
          </div>
          <label for="password">Password:</label><br>
          <div class="input-field">
           <i class="material-icons prefix">vpn_key</i>
           <input class="input-kouk" type="password" id="password" name="password" value="" placeholder="Enter your password" required><br><br>
          </div>
          <div class="col s12 center">
          <input class="waves-effect waves-light btn btn-kouk center-block" type="submit" value="Log In">
          </div>
        </form> 
      </div>

      <div class="col m3 hide-on-small-and-down"></div>
    </div>
  </div>
</div>



<!-- ENDS OF MAIN CONTENT -->
<script>
  function validateForm() {
    var x = document.forms["login-form"]["username"].value;
    var y = document.forms["login-form"]["password"].value;
    if (x.trim() == "") {
      alert("Name must be filled out");
      return false;
    }
    if (y.trim() == "") {
      alert("Password must be filled out");
      return false;
    }
  }
  </script>



